<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal" 
    android:paddingTop="@dimen/xui_view_padding"
    android:paddingBottom="@dimen/xui_view_padding">

    <TextView
        android:id="@+id/xui_load_full"
        style="@style/auto_list_footer_text_view"
        android:text="@string/xui_no_more"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/xui_no_data"
        style="@style/auto_list_footer_text_view"
        android:text="@string/xui_no_more"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/xui_load_more"
        style="@style/auto_list_footer_text_view"
        android:text="@string/xui_load_more"/>

    <ProgressBar
        android:id="@+id/xui_loading"
        style="@style/customProgressBar"/>

</LinearLayout>