<?xml version="1.0" encoding="utf-8"?>
<!-- 不带圆角 白色背景 灰色边框 无下边框 长方体 -->  
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >  
    <item
        android:top="-2dp"
        android:left="-2dp"
        android:right="-2dp">  
        <shape>  
            <solid android:color="#FFFFFF"/>  
            <stroke  
                android:width="1dp"  
                android:color="#d4d4d4" />  
        </shape>  
    </item>  
</layer-list>

