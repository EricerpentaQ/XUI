<?xml version="1.0" encoding="utf-8"?>
<!-- 宝库页面标题标题栏，左边一个返回图片，一个搜索图片，右边一个文字按钮 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_head"
    android:layout_width="match_parent"
    android:layout_height="@dimen/xui_header_height"
    android:background="@color/xui_head_background">

    <ImageView
        android:id="@+id/img_head_left"
        style="@style/xui_header_menu_icon"
        android:contentDescription="@string/xui_content_description"
        android:src="@drawable/xui_action_back_white" />

    <ImageView
        android:id="@+id/img_header_left_1"
        style="@style/xui_header_menu_icon"
        android:layout_toRightOf="@id/img_head_left"
        android:contentDescription="@string/xui_content_description"/>

    <include layout="@layout/xui_view_head_title" />

    <Button
        android:id="@+id/btn_head_right"
        style="@style/xui_header_menu_button"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/xui_header_menu_background"
        android:textColor="@color/xui_head_menu_text"/>

</RelativeLayout>